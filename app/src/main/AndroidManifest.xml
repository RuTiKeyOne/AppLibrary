<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.applibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppLibrary">
        <activity
            android:name=".WebsiteActivity"
            android:exported="true"
            android:label="@string/about_activity"/>
        <activity
            android:name=".CurrentlyReadingBooksActivity"
            android:exported="true"
            android:label="@string/currently_reading_activity"/>
        <activity
            android:name=".FavouriteBooksActivity"
            android:exported="true"
            android:label="@string/favourite_books_activity"/>
        <activity
            android:name=".WantToReadActivity"
            android:exported="true"
            android:label="@string/want_to_read_activity"/>
        <activity
            android:name=".AlreadyReadBookActiivity"
            android:exported="true"
            android:label="@string/already_book_activity"/>
        <activity
            android:name=".BookActivity"
            android:exported="true"
            android:label="@string/book_activity"/>
        <activity
            android:name=".AllbooksActivity"
            android:exported="true"
            android:label="@string/all_books_activity"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>